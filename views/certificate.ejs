    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script>
        function add() {
            var a = document.createElement('div');
            a.id = 'certificates_demo';
            a.innerHTML = `<p><input type="text" placeholder="Enter Certificate Name" name="certificatename" id="certificatename"></p>
            <p><input type="text" placeholder="Enter platform url" name="platformurl" id="platformurl"></p>
            <p><input type="text" placeholder="Certificate Url" name="certificateurl" id="certificateurl"></p>`;
            document.getElementById('certificates').appendChild(a);
        }

        function remove() {
            var a = document.getElementById('certificates');
            a.removeChild(a.lastElementChild);
        }
    </script>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
