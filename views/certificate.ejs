    </nav>
    <div id="sidebar">
        <form action="/intro" method="get">
            <button id="sidebarbuttons">INTRO</button>
        </form>
        <form action="/skill" method="get">
            <button id="sidebarbuttons">SKILLS</button>
        </form>
        <form action="/certificate" method="get">
            <button id="sidebarbuttons">CERTIFICATES</button>
        </form>
        <form action="/media" method="get">
            <button id="sidebarbuttons">MEDIA PROFILES</button>
        </form>
    </div>
    <div id="content_div">
        <form action="/certificatepost" method="post" id="form_certificate">
            <center>
                <div id="div1">
                    <div id="certificates">
                        <% var i=0 %>
                            <% if(flag===0) { %>
                                <div id="certificates_demo">
                                    <p><input type="text" placeholder="Enter Certificate Name" name="certificatename" id="certificatename"></p>
                                    <p><input type="text" placeholder="Enter platform url" name="platformurl" id="platformurl"></p>
                                    <p><input type="text" placeholder="Certificate Url" name="certificateurl" id="certificateurl">
                                    </p>
                                </div>
                                <div id="certificates_demo">
                                    <p><input type="text" placeholder="Enter Certificate Name" name="certificatename" id="certificatename"></p>
                                    <p><input type="text" placeholder="Enter platform url" name="platformurl" id="platformurl"></p>
                                    <p><input type="text" placeholder="Certificate Url" name="certificateurl" id="certificateurl">
                                    </p>
                                </div>
                                <% } %>
                                    <% if(flag===516){ %>
                                        <% for(i=0;i<url.length;i++) { %>
                                            <div id="certificates_demo">
                                                <p><input type="text" placeholder="Enter Certificate Name" name="certificatename" id="certificatename" value="<%= name[i] %>">
                                                </p>
                                                <p><input type="text" placeholder="Enter platform url" name="platformurl" id="platformurl" value="<%= platform[i] %>">
                                                </p>
                                                <p><input type="text" placeholder="Certificate Url" name="certificateurl" id="certificateurl" value="<%= url[i] %>">
                                                </p>
                                            </div>
                                            <% } %>
                                                <% } %>

                    </div>
                </div>
            </center>
            <input type="submit" value="Save & Next" id="submit">
        </form>
        <div id="div2">
            <input type="button" value="ADD CERTIFICATE" onclick=add() id="create"><br><br>
            <input type="button" value="REMOVE CERTIFICATE" onclick=remove() id="remove">
        </div>
    </div>
