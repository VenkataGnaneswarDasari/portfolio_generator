    <script>
        function add() {
            var a = document.createElement('div');
            a.id = 'skills_demo';
            a.innerHTML = `<p><input type="text" placeholder="Enter Skill Name" name="skillname" id="skillname" required></p>
             <p><input type="text" placeholder="Rate your skill Till 5" name="skillstar" min="1" max="5" id="skillstar" required></p>
            <p><input type="text" placeholder="Skill Url" name="skillurl" id="skillurl" required></p>`;
            document.getElementById('skills').appendChild(a);
        }

        function getSkillsDemoCount() {
            var skillsContainer = document.getElementById('skills');
            var skillsDemoElements = skillsContainer.querySelectorAll('.skills_demo');
            var skillsDemoCount = skillsDemoElements.length;
            return skillsDemoCount;
        }

        function remove() {
            var a = document.getElementById('skills');
            var b = document.getElementById('skills_demo');
            var c = a.childElementCount;
            if (c > 2)
                a.removeChild(a.lastElementChild);
            else alert("Minimum 2 Skills are required");
        }
    </script>
</head>

<body>
